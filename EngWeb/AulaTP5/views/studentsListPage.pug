extends layout

block content
    div.w3-card-4
        header.w3-container.w3-teal
            h1 
                span Students List
                a.w3-btn.w3-round.w3-grey(href='/alunos/registo') +
        div.w3-container
            table.w3-table-all
                tr
                    th Id
                    th name
                    th Gitlink
                    th Actions
                each aluno in alunos
                    tr
                        td= aluno.id
                        td
                            a(href="/alunos/" + aluno.id)= aluno.nome
                        td= aluno.gitlink
                        td
                            span [
                                a(href='/alunos/edit/' + aluno.id) Edit
                            span ]
                            span [
                                a(href='/alunos/delete/' + aluno.id) Delete
                            span ] 
    footer.w3-container.w3-pale-green
      adress Generated by EW2025 #{data} 
      a(href='/') Voltar

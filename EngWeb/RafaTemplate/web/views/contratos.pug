extends layout 

block dhead
  link(rel="stylesheet", href="/assets/css/style.css")

block content 
  .w3-card-4
    header.w3-container.w3-blue
      h1 Lista de Contratos 

    .w3-container
      table.w3-table-all
        tr
          thead
            tr
              th Identificador
              th Objeto
              th Data de Celebração
              th Preço Contratual
              th Entidate Comunicante
              th NIPC da Entidade Comunicante
          tbody
            each contract in lcontracts
              tr
                td
                    a(href=`/${contract.idcontrato}`)= contract.idcontrato
                td= contract.objectoContrato
                td= contract.dataCelebracaoContrato
                td= contract.precoContratual
                td= contract.entidade_comunicante
                td
                    a(href=`/entidades/${contract.NIPC_entidade_comunicante}`)= contract.NIPC_entidade_comunicante

  footer.we-container.w3-blue
    address Generated by ENGWEB2025 class
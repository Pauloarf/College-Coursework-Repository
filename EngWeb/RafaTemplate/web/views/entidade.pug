extends layout 

block dhead
  link(rel="stylesheet", href="/assets/css/style.css")

block content 
  .w3-card-4
    header.w3-container.w3-blue
      h1.no-margin.mb= entity.name
      h3.no-margin.mt= entity.nipc
      h6.no-margin.mt 
        a(href="/contratos") Voltar atrás
    
    .w3-container
      h2 Valor total: #{entity.totalValue}€

      h2 Contratos
      table.w3-table-all
        tr
          thead
            tr
              th Identificador
              th Objeto
              th Data de Celebração
              th Preço Contratual
          tbody
            each contract in lcontracts
              tr
                td
                    a(href=`/${contract.idcontrato}`)= contract.idcontrato
                td= contract.objectoContrato
                td= contract.dataCelebracaoContrato
                td #{contract.precoContratual}€

  footer.we-container.w3-blue
    address Generated by ENGWEB2025 class
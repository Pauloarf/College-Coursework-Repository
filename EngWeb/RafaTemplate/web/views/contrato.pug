extends layout 

block dhead
  link(rel="stylesheet", href="/assets/css/style.css")

block content 
  .w3-card-4
    header.w3-container.w3-blue
      h1.no-margin.mb Contrato ##{contract.idcontrato}
      h6.no-margin.mt 
        a(href="/contratos") Voltar atrás
    
    .w3-container
      table.w3-table-all
        tr
          thead
            tr
              th
              th
          tbody
              tr
                td Identificador
                td= contract.idcontrato
              tr
                td Nº Anúncio
                if contract.nAnuncio
                  td= contract.nAnuncio
                else
                  td N/A
              tr
                td Tipo de Procedimento
                td= contract.tipoprocedimento
              tr
                td Objecto
                td= contract.objectoContrato
              tr
                td Data de Publicação
                td= contract.dataPublicacao
              tr
                td Data de Celebração
                td= contract.dataCelebracaoContrato
              tr
                td Preço Contratual
                td #{contract.precoContratual}€
              tr
                td Prazo de Execução
                td= contract.prazoExecucao
              tr
                td NIPC da Entidade Comunicante
                td= contract.NIPC_entidade_comunicante
              tr
                td Entidade Comunicante
                td= contract.entidade_comunicante
              tr
                td Fundamentação
                td= contract.fundamentacao
              tr

  footer.we-container.w3-blue
    address Generated by ENGWEB2025 class